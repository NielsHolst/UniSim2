// phys-dev-1.box
Simulation sim {
  .iterations = k[iterations]
  .steps = 60
  SeriesByIteration k {
    .numbers = c(1, 2, 3, 10, 25)
  }
  Stage distDelay {
    .initial = 100 
    .duration = 30
    .k = k[value]
    .timeStep = 1
  }
  OutputR {
    .clearPlots = TRUE
    PageR {
      .ncol = 1
      .commonLegend = TRUE
      .legendPosition = "bottom"
      &ggplot = "geom_vline(xintercept=30, linetype='longdash') + geom_point() + geom_line() + scale_x_continuous(breaks=10*(0:6)) +  scale_color_manual(labels=c(1,2,3,10,25),values=unisim_colours[1:5]) +
      guides(colour=guide_legend(title='growthFactor')) +
      theme(legend.position = 'bottom')"
      PlotR {
        .layout = "merged"
        .ports = distDelay[outflow]
        .ggplot = ..[ggplot] + "+ labs(x='')"
      }
      PlotR {
        .layout = "merged"
        .ports = distDelay[content]
        .ggplot = ..[ggplot] + "+ labs(x='')"
      }
      PlotR {
        .layout = "merged"
        .ports = distDelay[outflowTotal]
        .ggplot = ..[ggplot]
      }
    }
  }
}

