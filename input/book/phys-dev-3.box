// phys-dev-3.box
Simulation sim {
  .iterations = growthFactor[iterations]
  .steps = 60
  SeriesByIteration growthFactor {
    .numbers = c(0.2, 1, 2)
  }
  Stage distDelay {
    .initial = 100 
    .duration = 30
    .growthFactor = growthFactor[value]
    .k = 25
    .timeStep = 1
    .instantLossRate = sum(./loss[value])
    OnOff loss {
      .x = sim[step]
      .xOn = 25
      .xOff = 25
      .valueOn = 0.3
      .valueOff = 0
    }
    OnOff loss {
      .x = sim[step]
      .xOn = 32
      .xOff = 32
      .valueOn = 0.5
      .valueOff = 0
    }
  }
  OutputR {
    PageR {
      .ncol = 1
      .commonLegend = TRUE
      .legendPosition = "bottom"
      &ggplot = "geom_vline(xintercept=30, linetype='longdash') + geom_point() + geom_line() + scale_x_continuous(breaks=10*(0:6)) +  scale_color_manual(labels=c(0.2, 1.0, 2.0),values=unisim_colours[1:3]) +
      guides(colour=guide_legend(title='growthFactor')) +
      theme(legend.position = 'bottom')"
      PlotR {
        .layout = "merged"
        .ports = distDelay[outflow]
        .ggplot = ..[ggplot] + "+ labs(x='')"
      }
      PlotR {
        .layout = "merged"
        .ports = distDelay[content]
        .ggplot = ..[ggplot] + "+ labs(x='')"
      }
      PlotR {
        .layout = "merged"
        .ports = distDelay[outflowTotal]
        .ggplot = ..[ggplot]
      }
    }
  }
}

