		<port name="xMax" ref="seq[max]"/>
		<port name="a" value="2"/>
		<port name="b" value="1"/>
	</box>
	<box class="Sandy" name ="F">
		<port name="x" ref="seq[value]"/>
		<port name="xMin" ref="seq[min]"/>
		<port name="xMax" ref="seq[max]"/>
		<port name="a" value="4"/>
		<port name="b" value="0.5"/>
	</box>
</box>
