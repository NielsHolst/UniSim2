// book/photo-thermal4.box
Simulation sim {
  .steps = 365
  Calendar calendar {
    .initialDateTime = 1/1/2016
  }
  DayDegrees dayDegrees {
    .T = 15
    .T0 = 10
  }
  DayLengthScale ptTimeStep {
    .dayLength = calendar[dayLength]
    .valueToScale = dayDegrees[step]
  }
  OutputR {
    PageR {
      .xAxis = calendar[date]
      PlotR {
        .ports = ptTimeStep[value]
      }
    }
  }
}