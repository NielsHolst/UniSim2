Simulation sim {
  .iterations = 1
  .steps = 6000

  student::Pollinator pollinator {
    .initial_B = 4
    .R = ../plant[R]
  }

  student::Plant plant {
    .initial_R = 2
    .initial_V = 3
    .B = ../pollinator[B]
  }

  student::Plant plant_too {
    .initial_R = 2
    .initial_V = 3
    .B = ../pollinator[B]
  }

  OutputR {
    PageR {
      .xAxis = sim[step]
      PlotR {
        .ports = (plant[V] pollinator[B] plant[R])
      }
    }
  }
}
