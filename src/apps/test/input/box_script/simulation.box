Simulation sim {
  .steps = 3
  Computation comp {  
  }
  Box pop { 
    &r = 1.05
    &density = if    (comp[step]=="reset" ) then 100.0 
               elsif (comp[step]=="update") then .[r] * .[density]
               else .[aaa]
  }
  OutputText output {
    .ports = pop[*] | sim[step] | comp[step]
  }
  OutputWriter writer {
  }
}